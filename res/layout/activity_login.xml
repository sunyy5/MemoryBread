<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/final3"
    android:orientation="vertical"
    tools:context=".LoginActivity" >
	<ImageView 
	    android:layout_width="150dp"
	    android:layout_height="181.5dp"
	    android:layout_centerHorizontal="true"
	    android:background="@drawable/login"
	    android:layout_marginTop="40dp"/>
		
    <EditText
        android:id="@+id/et_useraccount"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:drawableLeft="@drawable/person"
        android:hint="请输入账号"
        android:singleLine="true"
        android:textColor="#f1f1f1"
        android:textColorHint="#dbdbde" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:drawableLeft="@drawable/lock"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#f1f1f1"
        android:textColorHint="#dbdbde" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:background="@drawable/login_button_selector"
        android:text="登  陆"
        android:textColor="@drawable/login_button_textcolor_selector"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_register"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/bt_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/regiter_button_selector"
        android:text="注  册"
        android:textColor="@drawable/register_button_textcolor_selector"
        android:textSize="20sp" />
    
    <Button
        android:background="#00000000"
        android:id="@+id/bt_forget"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text=" 忘记密码?"
        android:textSize="16sp"
        android:textColor="#c6d4e1"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bt_register"
        android:layout_marginTop="10dp"/>

</RelativeLayout>