<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/final5"
    android:orientation="vertical"
    tools:context=".LoginActivity" >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="181.5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/login" />

    <EditText
        android:id="@+id/et_numberto"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:drawableLeft="@drawable/person"
        android:hint="请输入手机号"
        android:singleLine="true"
        android:textColor="#f1f1f1"
        android:textColorHint="#dbdbde" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:drawableLeft="@drawable/lock"
        android:hint="请输入用户名"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#f1f1f1"
        android:textColorHint="#dbdbde" />

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:background="@drawable/login_button_selector"
        android:text="提  交"
        android:textColor="@drawable/login_button_textcolor_selector"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_cancelforget"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/bt_submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/regiter_button_selector"
        android:text="取  消"
        android:textColor="@drawable/register_button_textcolor_selector"
        android:textSize="20sp" />

</RelativeLayout>